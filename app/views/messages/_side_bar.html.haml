.side-bar
  .side-header
    .top-items
      .top-items__user-name
        = current_user.name
      %ul.top-items__icons
        %li.icon
          = link_to new_group_path, class: "icon--create-group" do
            = icon('far', 'edit')
        %li.icon
          = link_to edit_user_path(current_user), class: "icon--setting" do
            = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      = link_to "#" do
        .group-list__group
          .group-name
            = group.name
